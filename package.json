{
  "name": "sonos2mqtt",
  "version": "0.0.0-development",
  "description": "A smarthome bridge between your sonos system and a mqtt server.",
  "main": "lib/index.js",
  "license": "MIT",
  "author": "Stephan van Rooij <github@svrooij.nl> (https://svrooij.nl)",
  "bin": {
    "sonos2mqtt": "lib/index.js"
  },
  "keywords": [
    "sonos",
    "mqtt-smarthome",
    "mqtt",
    "music control"
  ],
  "preferGlobal": true,
  "scripts": {
    "build": "tsc",
    "help": "node ./lib/index.js --help",
    "lint-fix": "eslint ./src/*.ts --fix",
    "serve-docs": "docker-compose -f ./docs/docker-compose.yml up jekyll",
    "test": "eslint ./src/*.ts"
  },
  "dependencies": {
    "@svrooij/sonos": "^2.5.0",
    "mqtt": "4.3.7",
    "serilogger": "^0.4.1",
    "yalm": "4.1.0",
    "yargs": "17.5.1"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/node": "^16.11.7",
    "@types/yargs": "17.0.10",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "4.31.1",
    "eslint": "7.32.0",
    "pre-commit": "1.2.2",
    "typescript": "3.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/svrooij/sonos2mqtt.git"
  },
  "bugs": {
    "url": "https://github.com/svrooij/sonos2mqtt/issues"
  },
  "pre-commit": [
    "build",
    "test"
  ],
  "funding": {
    "type": "Github sponsor",
    "url": "https://github.com/sponsors/svrooij"
  },
  "files": [
    "README.md",
    "LICENSE",
    "lib/**/*.ts",
    "lib/**/*.js"
  ]
}
